<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppXamarin"
             x:Class="AppXamarin.MainPage">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Source="icon.png" WidthRequest="100" HeightRequest="100" Margin="0,50,0,30"/>
            
            <StackLayout Grid.Row="1" Padding="30,20">
                <Entry Placeholder="Correo Electronico"/>
                <Entry Placeholder="Contraseña" IsPassword="True"/>
                <Button Text="Iniciar Sesión" BorderRadius="20" />
            </StackLayout>
        </Grid>
        
    </ContentPage.Content>
    
  <!--  <Button Text="Click Me" VerticalOptions="End" />-->

</ContentPage>
